<div class="editProfile">
  <h2 id="profileTitle">Update your profile</h2>
  <form id="updateForm" action="updateProfile" method="POST">

    <div class="form-group">
      <label class="control-label col-sm-2">First Name:</label>
      <div class="col-sm-10">
        <input type="text" name="fname" autocomplete="off" value={{user.fname}} required>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2">Last Name:</label>
      <div class="col-sm-10">          
        <input type="text" name="lname" autocomplete="off"  required value={{user.lname}}>
      </div>
    </div>
    
    <div class="form-group">
      <label class="control-label col-sm-2">Profile Picture:</label>
      <div class="col-sm-10">          
        <input type="text" name="image" autocomplete="off" value={{user.image}} required>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2">About:</label>
      <div class="col-sm-10">          
        <input type="textarea" name="about" autocomplete="off" value={{user.about}} required>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Country:</label>
      <div class="col-sm-10">          
        <input type="text" name="country" value={{user.country}} required>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Date of Birth:</label>
      <div class="col-sm-10">          
        <input type="text" name="dob" value={{user.dob}} required>
      </div>
    </div>


    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button id="profileBtn" type="submit" class="btn btn-default" value="Update Profile">update profile</button>
      </div>
    </div>

  </form>
</div>