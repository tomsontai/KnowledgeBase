<section class="container-fluid">
    <div class="row">
        <a href="/showMessages/{{this.id}}">
            <div class="postcard-image">
                    <object data={{this.image}} type="image/png">
                        <img class="img-circle" id="posterIMG" src="/img/defaultAvatar.png" alt="Default Avatar"/>
                    </object>
            </div>
            <div class="postcard-body">
                <div class="postcard-title">
                    <div class="postcard-subject">{{this.fname}} {{this.lname}}</b></div>
                    <div class="postcard-subject">{{this.date}}</div>
                    <div class="postcard-topic">{{this.subject}}</div>
                </div>  
            </div> 
        </a>      
    </div>
</section>